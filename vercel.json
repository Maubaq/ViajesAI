{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/planificar",
      "dest": "/backend/api/planificar.py"
    },
    {
      "src": "/api/health",
      "dest": "/backend/api/health.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}

